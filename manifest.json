{
  "manifest_version": 3,
  "name": "Bravia Sidebar Remote",
  "version": "1.1.0",
  "description": "Opera Sidebar Remote Control for Sony Bravia TVs (Profiles, Status, Apps, Inputs, IRCC auto-load).",
  "permissions": ["storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "sidebar_action": {
    "default_title": "Bravia Remote",
    "default_panel": "sidebar.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}